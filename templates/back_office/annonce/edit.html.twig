{# templates/back_office/annonce/edit.html.twig #}

{% extends 'back_office/base.html.twig' %}

{% block title %}Modifier l'annonce - Back Office{% endblock %}

{% block body %}
    <h1>Modifier l'annonce</h1>

    {{ form_start(form) }}
        {{ form_row(form.nomanimal, {
            'label': "Nom de l'animal",
            'attr': {'class': 'form-control'}
        }) }}
        {{ form_row(form.espece, {
            'label': "Espèce",
            'attr': {'class': 'form-control'}
        }) }}
        {{ form_row(form.genre, {
            'label': "Genre",
            'attr': {'class': 'form-control'}
        }) }}
        {{ form_row(form.photo, {
            'label': "Photo de l'animal",
            'attr': {'class': 'form-control'}
        }) }}

        <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
    {{ form_end(form) }}

    <a href="{{ path('annonce_index') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
{% endblock %}